# Kaldor IIoT - Environment Configuration

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# CORS
CORS_ORIGIN=http://localhost:3001

# Database (TimescaleDB/PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kaldor_iiot
DB_USER=kaldor
DB_PASSWORD=your_db_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# MQTT Broker
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=kaldor_backend
MQTT_PASSWORD=your_mqtt_password_here
MQTT_CLIENT_ID=kaldor-api-server

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_min_32_characters
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=notifications@kaldor-iiot.example.com
SMTP_PASSWORD=your_email_password_here
SMTP_FROM="Kaldor IIoT" <notifications@kaldor-iiot.example.com>

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Logging
LOG_LEVEL=info
LOG_FILE=logs/kaldor-iiot.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Python Service
ANALYTICS_SERVICE_URL=http://localhost:5000

# File Upload
MAX_FILE_SIZE=10485760

# Session
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Feature Flags
FEATURE_EMAIL_ALERTS=true
FEATURE_SMS_ALERTS=false
FEATURE_PREDICTIVE_MAINTENANCE=true
